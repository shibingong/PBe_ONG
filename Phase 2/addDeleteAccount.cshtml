                $('#firstPage').attr('hidden', true);
                $('#forthPage').attr('hidden', true);
                $('#fifthPage').attr('hidden', true);
                $('#sixthPage').attr('hidden', true);
                $('#seventhPage').attr('hidden', true);
            }
            //added dynamic account type input
            $("#accTypeInput").val(selectedAccType);

            //additional input will appear for some account type
            if (selectedAccType == "Credit / Debit Card") {
                $(".cvvNo").prop("hidden", false);
            }
            if (selectedAccType == "Hire Purchase Account") {
                $(".hpNoteNo").prop("hidden", false);
            }
            if (selectedAccType == "Loans Account") {
                $(".loanNoteNo").prop("hidden", false);
            }
        });

