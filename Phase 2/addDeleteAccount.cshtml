            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Submit',
            allowOutsideClick: false,
            customClass: {
                title: 'alertFontStyle'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: 'Account Deleted Successfully!',
                    icon: 'success',
                    customClass: {
                        title: 'alertFontStyle'
                    }
                }).then(function () {
                    $('#firstPage').prop('hidden', false);
