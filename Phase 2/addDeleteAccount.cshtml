                'success'
            )
            $('#thirdNext').removeClass('disabled');
            // $('#confirmBtn').removeClass('disabled');
            $('.reqPacBtn').addClass('disabled');
            $('.timerText').prop("hidden", false);
            startTimer(oneMin, display);
        });

        function validate() {
            var thisValue = "";
            var strResult = "";

            // Start Date

            thisValue = $("#accTypeSelect").val();
            strResult = onInputValidate(thisValue);
            $("#accTypeSelect").next(".text-danger").html(strResult);
            if (strResult == "") {
                return true;
            } else {
                return false;
            }
        }

        function onInputValidate(thisValue) {

            if (thisValue == null || thisValue == "" || thisValue == "Please select") {
                return "<span>This field is required.</span>";
            }
            return "";
        }

